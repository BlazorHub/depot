@inject depot.Client.Services.LoadingBarService LoadingBarService 

<style>
    .loadingbar-container {
        z-index: 5000;
        margin-top: 25%;
        width: 50%;
    }

    .loadingbar-container h4 {
        color: white;
    }

    .loadingbar-overlay {
        position: fixed;
        top: 0;
        left: 0;
        background: rgba(0,0,0,0.6);
        z-index: 4000;
        width: 100%;
        height: 100%;
    }
</style>
@if (IsVisible)
{

    <div class="loadingbar-overlay">
        <div class="loadingbar-container mx-auto">
            <h4 class="mx-auto">Loading...</h4>
            <div class="progress">
                <div class="progress-bar progress-bar-striped bg-info progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 100%"></div>
            </div>
        </div>
    </div>
}
@code
{
    protected bool IsVisible { get; set; }
    protected override void OnInitialized()
    {
        LoadingBarService.OnShow += ShowLoadingBar;
        LoadingBarService.OnHide += HideLoadingBar;
    }

    public void ShowLoadingBar()
    {
        IsVisible = true;
        StateHasChanged();
    }

    public void HideLoadingBar()
    {
        IsVisible = false;
        StateHasChanged();
    }
}